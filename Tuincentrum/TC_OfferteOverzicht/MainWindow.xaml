<Window x:Class="TC_OfferteOverzicht.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TC_OfferteOverzicht"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="60" FontFamily=" Segoe UI" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="70" >Offerte</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button Content="+" FontSize="20" Background="DarkSeaGreen" Foreground="White" Width="100" Height="40" Margin="10"
            Click="Otoev_Click" BorderBrush="DarkGreen"/>

            <Button Content="🔍"  FontSize="15" Background="#CBC3E3" Foreground="Black" Width="100" Height="40" Margin="10"
            Click="Offerte_Click" BorderBrush="DarkViolet"/>

            <Button Content="↻"  FontSize="20" Background="CornflowerBlue" Foreground="White" Width="100" Height="40" Margin="10"
            Click="Update_Click" BorderBrush="DarkBlue"/>
        </StackPanel>

    </Grid>
</Window>
